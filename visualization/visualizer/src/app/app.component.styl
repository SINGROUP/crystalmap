primary_color = #FF6F00
header_height = 75px

#box
    width: 100%;
    height: 100%;
    margin: 0;
    display: flex
    flex-direction: column

#header
    background-color: primary_color
    width: 100%
    height: header_height
    display: flex
    align-items: center
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.26)
    position: absolute

#header>h1
    color: white
    font-family: Ubuntu
    margin-left: 20px

.container
    padding-top: header_height
    display: flex
    flex-direction: row
    flex: 1

#sidebar
    background-color: #eee
    box-shadow: 6px 0 6px rgba(0,0,0,.1)
    width: 300px
    padding: 10px 20px

#canvas
    flex: 1

input[type="file"] {
    display: none;
}

#openlabel
    padding: 10px;
    background: primary_color;
    display: table;
    color: #fff;
    cursor: pointer;

.option > h2
    margin: 10px 0px
    font-size: 18px

.option
    margin-bottom: 10px
    display: flex
    flex-direction: column
